{
    "compilerOptions": {
        "target": "es6", // Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', etc.
        "module": "commonjs", // Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', or 'ESNext'.
        "allowJs": true, // Allow JavaScript files to be compiled.
        "jsx": "react-jsx", // Enable the new JSX transform in React 17+
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        },
        "checkJs": false, // Report errors in .js files.
        "noEmit": true, // Do not emit outputs.
        "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules via the __esModule flag.
        "skipLibCheck": true, // Skip type checking of all declaration files.
        "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
        "allowImportingTsExtensions": true
    },
    "include": [
        "src/**/*"
    ], // Include all files in the src directory
    "exclude": [
        "node_modules",
        "build"
    ] // Exclude node_modules and build directories
}